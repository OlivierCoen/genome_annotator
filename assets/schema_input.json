{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/genome_annotator/master/assets/schema_input.json",
    "title": "genome_annotator pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "genome": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^([\\S\\s]*\\/)?[^\\s\\/]+\\.f[ast|n]a?\\.gz$",
                "errorMessage": "Genome fasta file must be provided, cannot contain spaces and must have extension '.fa.gz', 'fna.gz' or '.fasta.gz'"
            },
            "gtf": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^([\\S\\s]*\\/)?[^\\s\\/]+\\.gtf$",
                "errorMessage": "GTF file cannot contain spaces and must have extension '.gtf'",
                "meta": ["gtf"]
            },
            "hintsfile": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^([\\S\\s]*\\/)?[^\\s\\/]+\\.hintsfile.gff$",
                "errorMessage": "Hints GFF file cannot contain spaces and must have extension '.hintsfile.gff'",
                "meta": ["hintsfile"]
            },
            "ref_gff": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^([\\S\\s]*\\/)?[^\\s\\/]+\\.(gff|gtf)$",
                "errorMessage": "Current reference annotation file cannot contain spaces and must have extension '.gff' or '.gtf'",
                "meta": ["ref_gff"]
            }
        },
        "required": ["sample", "genome"]
    }
}
